@model IEnumerable<Application.Furnitures.FurnitureModel>
@{
    ViewData["Title"] = "Here are the existing furnitures";
}

<h1>Welcome to the online Furniture Shop</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Quantity > 0)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details","Furniture" ,new { id=item.Id}) |
                        @Html.ActionLink("Buy", "BuyFurniture","Furniture" ,new { id=item.Id})
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
